{
	"exclude": ["./node_modules/**/*", "./dist/**/*"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"lib": ["ES2021", "DOM", "DOM.Iterable"],
		"skipDefaultLibCheck": true,
		"module": "ES2020",
		"noEmit": true,
		"removeComments": true,
		"target": "ES2021",
		"strict": true,
		"suppressImplicitAnyIndexErrors": true,
		"useUnknownInCatchVariables": false,
		"sourceMap": false,
		"isolatedModules": true,
		"esModuleInterop": true,
		"newLine": "LF"
	}
}
