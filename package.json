	"bugs": {
		"url": "https://github.com/madcampos/sdrlog/issues"
	},
	"homepage": "https://github.com/madcampos/sdrlog#readme",
	"devDependencies": {
		"@types/emscripten": "^1.39.4",
		"@typescript-eslint/eslint-plugin": "^4.25.0",
		"@typescript-eslint/parser": "^4.25.0",
		"eslint": "^7.27.0",
		"htmlhint": "^0.14.2",
		"ico-endec": "^0.1.6",
		"imagemin": "^8.0.0",
		"imagemin-mozjpeg": "^9.0.0",
		"imagemin-optipng": "^8.0.0",
		"imagemin-svgo": "^9.0.0",
		"jimp": "^0.16.1",
		"puppeteer": "^9.1.1",
		"snowpack": "^3.5.1",
		"stylelint": "^13.13.1",
		"typescript": "^4.3.2"
	},
	"dependencies": {
		"@types/wicg-file-system-access": "^2020.9.1"
