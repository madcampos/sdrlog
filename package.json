{
	"name": "sdrlog",
	"version": "1.0.0",
	"description": "List of shadowrun published material (books, tabletop, video games, etc.) ",
	"main": "./src/index.html",
	"type": "module",
	"scripts": {
		"start": "snowpack dev",
		"start:sw": "snowpack dev --config snowpack.config.serviceworker.mjs",
		"lint": "npm run lint:js && npm run lint:css",
		"lint:js": "eslint **/*.ts --fix",
		"lint:css": "stylelint **/*.css --fix",
		"build": "snowpack build --mode production --config snowpack.config.build.mjs",
		"postbuild": "node build/postprocess-files.mjs",
		"build:assets": "npm run build:icons-transparent && npm run build:icons-maskable && npm run build:splash",
		"build:icons-transparent": "pwa-asset-generator build/logo.html --type png --icon-only --scrape false --dark-mode --opaque false src/img/icons/transparent",
		"build:icons-maskable": "pwa-asset-generator build/logo.html --type png --icon-only src/img/icons/maskable",
		"build:splash": "pwa-asset-generator build/logo.html --type png --splash-only src/img/splash",
		"test": "wtr"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/madcampos/sdrlog.git"
	},
	"keywords": [
		"shadowrun",
		"sdr",
		"books"
	],
	"author": "madcampos<madcampos@outlook.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/madcampos/sdrlog/issues"
	},
	"homepage": "https://github.com/madcampos/sdrlog#readme",
	"devDependencies": {
		"@snowpack/web-test-runner-plugin": "^0.2.2",
		"@types/chai": "^4.2.21",
		"@types/emscripten": "^1.39.5",
		"@types/mocha": "^9.0.0",
		"@types/wicg-file-system-access": "^2020.9.4",
		"@typescript-eslint/eslint-plugin": "^4.31.2",
		"@typescript-eslint/parser": "^4.31.2",
		"@web/test-runner": "0.13.17",
		"@web/test-runner-playwright": "^0.8.8",
		"chai": "^4.3.4",
		"eslint": "^7.32.0",
		"pwa-asset-generator": "^4.3.6",
		"snowpack": "^3.8.8",
		"snowpack-plugin-minify-html": "^0.1.1",
		"stylelint": "^13.13.1",
		"typescript": "^4.4.3"
	}
}
