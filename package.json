{
	"name": "sdrlog",
	"version": "1.0.0",
	"description": "List of shadowrun published material (books, tabletop, video games, etc.) ",
	"main": "index.html",
	"scripts": {
		"beforestart": "npm-run-all -s generate:covers",
		"start": "node ./server.mjs",
		"clean": "node -e \"require('fs').rmdirSync('./dist', { recursive: true })\"",
		"lint": "npm-run-all -p lint:**",
		"lint:js": "eslint . --fix",
		"lint:html": "htmlhint .",
		"lint:css": "stylelint **/*.css --fix",
		"version": "npm-run-all -s configure:version:** git-add",
		"configure:version": "npm version minor",
		"git-add": "git add .",
		"generate:cert": "pwsh build/generate-cert.ps1",
		"generate:covers": "pwsh build/extract-covers.ps1",
		"generate:thumbs": "node build/generate-thumbs.mjs",
		"optimize-covers": "node build/optimize-covers.mjs",
		"build:images": "npm-run-all -s generate:covers generate:thumbs optimize-covers",
		"build:browser-assets": "node build/generate-assets.mjs",
		"build:json-data": "node build/generate-data.mjs",
		"build:css": "node build/css-files.mjs",
		"build:html": "html-minifier src/index.html -c .htmlmin.json -o dist/index.html",
		"build:js": "node build/js-files.mjs",
		"prebuild": "npm-run-all -s lint",
		"build": "npm-run-all -p build:**",
		"postbuild": "npm run publish"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/madcampos/sdrlog.git"
	},
	"keywords": [
		"shadowrun",
		"sdr",
		"books"
	],
	"author": "madcampos<madcampos@outlook.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/madcampos/sdrlog/issues"
	},
	"homepage": "https://github.com/madcampos/sdrlog#readme",
	"devDependencies": {
		"@shockpkg/icon-encoder": "^1.1.0",
		"csso": "^4.0.3",
		"eslint": "^7.9.0",
		"eslint-plugin-jsdoc": "^30.4.2",
		"eslint-plugin-node": "^11.1.0",
		"fast-glob": "^3.2.4",
		"html-minifier": "^4.0.0",
		"htmlhint": "^0.14.1",
		"husky": "^4.3.0",
		"imagemin": "^7.0.1",
		"imagemin-mozjpeg": "^9.0.0",
		"imagemin-optipng": "^8.0.0",
		"imagemin-svgo": "^8.0.0",
		"jimp": "^0.16.1",
		"lint-staged": "^10.3.0",
		"live-server": "^1.2.1",
		"npm-run-all": "^4.1.5",
		"puppeteer": "^5.3.0",
		"stylelint": "^13.7.1",
		"terser": "^5.3.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js, mjs}": "eslint --fix",
		"*.{css}": "stylelint --fix",
		"*.{html}": "htmlhint",
		"*.{png,jpeg,jpg,gif,svg}": "imagemin-lint-staged"
	}
}
