{
	"name": "sdrlog",
	"private": true,
	"version": "1.0.0",
	"displayName": "Shadowrun Catalog",
	"shortName": "SDRlog",
	"description": "An interactive list of Shadowrun published material (books, tabletop, video games, etc.). Information about the items and can be linked to local files.",
	"homepage": "https://madcampos.github.io/sdrlog/",
	"keywords": [
		"shadowrun",
		"sdr",
		"rpg",
		"books"
	],
	"author": {
		"name": "madcampos",
		"email": "madcampos@outlook.com"
	},
	"license": "MIT",
	"browser": "./dist/index.html",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/madcampos/sdrlog.git"
	},
	"engines": {
		"node": ">=17.0.0"
	},
	"volta": {
		"node": "17.3.0"
	},
	"scripts": {
		"postinstall": "husky install",
		"start": "vite",
		"start:sw": "vite",
		"typecheck": "tsc --noEmit",
		"lint:js": "eslint src --ext .js,.mjs,.ts,.mts --fix --ignore-path .gitignore",
		"lint:css": "stylelint **/*.css --fix",
		"lint": "npm run typecheck && npm run lint:js && npm run lint:css",
		"lint-staged": "lint-staged",
		"prebuild:app": "npm run lint",
		"build:app": "vite build",
		"build:icons-transparent": "pwa-asset-generator build/logo.html --type png --maskable false --icon-only --scrape false --dark-mode --opaque false --log false public/icons/transparent",
		"build:icons-maskable": "pwa-asset-generator build/logo.html --type png --maskable false --icon-only --log false public/icons/maskable",
		"build:splash": "pwa-asset-generator build/logo.html --type png --splash-only --log false public/splash",
		"build:assets": "npm run build:icons-transparent && npm run build:icons-maskable && npm run build:splash",
		"prepreview": "npm run build:app",
		"preview": "vite preview --port 3000",
		"test": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@saschazar/wasm-mozjpeg": "^3.0.0",
		"@types/marked": "^4.0.8",
		"epubjs": "^0.3.93",
		"jszip": "^3.10.1",
		"marked": "^4.2.12",
		"nipplejs": "^0.10.0",
		"pdfjs-dist": "^3.2.146",
		"workbox-window": "^6.5.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@types/emscripten": "^1.39.6",
		"@types/wicg-file-system-access": "^2020.9.5",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"@typescript-eslint/parser": "^5.48.2",
		"c8": "^7.12.0",
		"eslint": "^8.32.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.0",
		"pwa-asset-generator": "^6.2.1",
		"stylelint": "^14.16.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"vite-plugin-html-env": "^1.2.7",
		"vite-plugin-pwa": "^0.14.1",
		"vitest": "^0.27.2"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --ext .ts --fix",
			"vitest related"
		],
		"*.js": [
			"eslint --ext .js --fix",
			"vitest related"
		],
		"*.css": "stylelint --fix"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
